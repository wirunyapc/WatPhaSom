@model IEnumerable<Models.Entities.Product>

@{
    ViewBag.Title = "productMenuRetail";
}

<h2>productMenuRetail</h2>
@using (Html.BeginForm("Cart", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<table class="table">
    <tr>
        <th>
            Image
        </th>

        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priceRetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            <image src="@Url.Content(item.photoPath)" alt="item.name" height="300" width="300" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.priceRetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Add to cart", "Cart", new { id = item.productId }) |
        </td>
    </tr>
}

</table>
}