@model Models.ViewModel.ShoppingCartViewModel
@{

    ViewBag.Title = "Shop : Your Cart";

}


<h2>Your cart</h2> 

<p align="right" class="actionButtons" >

    <a href="~/Checkout/Address">Check out</a>

</p>
@{ 

    if (Model.CartItems.Count > 0)
    {
<table width="90%" align="center">

    <thead>
        <tr>
            <th align="left">Product</th>

            <th align="center">Quantity</th>

            <th align="right">Price</th>

            <th align="right">Subtotal</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var line in Model.CartItems)
        {

            <tr>
                <td align="left">@line.product.name</td>

                <td align="left">@line.Count</td>

                @if (User.IsInRole("Wholesale"))
                {
                    <td align="right">@line.product.priceWholesale.ToString("c")</td>
                    <td align="right">@((line.Count * line.product.priceWholesale).ToString("c"))</td>
                }
                else
                {
                    <td align="right">@line.product.priceRetail.ToString("c")</td>
                    <td align="right"> @((line.Count * line.product.priceRetail).ToString("c"))</td>
                }                
                
                
                
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "ShoppingCart"))
                    {
                        @Html.Hidden("ProductId", line.product.productId)

                        <input class="actionButtons" type="submit" value="Remove" />
                    }
                </td>

            </tr>

        }

    </tbody>

    <tfoot>
        <tr>

            <td colspan="3" align="right">Total:</td>

            <td align="right">
               @Model.CartTotal

            </td>

        </tr>
    </tfoot>

</table>
        }
        else
        {
        < div >
            < p >
                There are no items in your cart currently.Please shop for something and add items..

           </ p >

       </ div >
            }
    } 
<p align="center" class="actionButtons">

    <a href="~/Product/Index">Continue shopping</a>

</p>
    
